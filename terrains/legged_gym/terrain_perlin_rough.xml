<mujoco model="random_box_terrain">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.01" gravity="0 0 -9.81" integrator="RK4"/>

    <asset>
        <texture type="2d" name="Plastic010_color"      file="../../textures/Plastic010_2K-PNG/Plastic010_2K-PNG_Color.png"/>
        <texture type="2d" name="Plastic010_roughness"  file="../../textures/Plastic010_2K-PNG/Plastic010_2K-PNG_Roughness.png"/>
        <texture type="2d" name="Plastic010_normal"     file="../../textures/Plastic010_2K-PNG/Plastic010_2K-PNG_NormalDX.png"/>

        <material name="pbr_plastic_gray" metallic ="0.05" roughness="1.0" rgba="1 0 0 1.0">
        <layer role="rgb"        texture="Plastic010_color"/>
        <layer role="normal"     texture="Plastic010_normal"/>
        <layer role="roughness"  texture="Plastic010_roughness"/>      
        </material>

        <hfield name="perlin_hfield_rough" size="5.12 5.12 0.4 0.5" file="height_field_rough.png"/>
    </asset>

    <worldbody>
        <body name="offset" pos="0 30 0">
            <body name="terrain" pos="-5.12 -5.12 0.0" >
                <geom type="hfield" hfield="perlin_hfield_rough" pos="0.0  0.0   0.0" material="pbr_plastic_gray"/>
                <geom type="hfield" hfield="perlin_hfield_rough" pos="10.24  0.0   0.0" material="pbr_plastic_gray"/>
                <geom type="hfield" hfield="perlin_hfield_rough" pos="0.0  10.24   0.0" material="pbr_plastic_gray"/>
                <geom type="hfield" hfield="perlin_hfield_rough" pos="10.24  10.24   0.0" material="pbr_plastic_gray"/>                              
            </body>

            <body name="boarder_stair" pos="0 0 0">
                <geom type="box" size="10.24 1.0 0.1" pos="0 -11.24 0" material="pbr_plastic_gray"/>
                <geom type="box" size="10.24 0.5 0.2" pos="0 -10.74 0" material="pbr_plastic_gray"/>

                <geom type="box" size="10.24 1.0 0.1" pos="0 11.24 0" material="pbr_plastic_gray"/>
                <geom type="box" size="10.24 0.5 0.2" pos="0 10.74 0" material="pbr_plastic_gray"/>

                <geom type="box" size="1.0 10.24 0.1" pos="-11.24 0 0" material="pbr_plastic_gray"/>
                <geom type="box" size="0.5 10.24 0.2" pos="-10.74 0 0" material="pbr_plastic_gray"/>

                <geom type="box" size="1.0 10.24 0.1" pos="11.24 0 0" material="pbr_plastic_gray"/>
                <geom type="box" size="0.5 10.24 0.2" pos="10.74 0 0" material="pbr_plastic_gray"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- 在这里你可以定义一些控制器 -->
    </actuator>

</mujoco>